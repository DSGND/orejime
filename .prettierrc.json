{
	"arrowParens": "always",
	"bracketSpacing": false,
	"experimentalOperatorPosition": "start",
	"htmlWhitespaceSensitivity": "ignore",
	"jsxSingleQuote": false,
	"printWidth": 80,
	"proseWrap": "always",
	"quoteProps": "preserve",
	"semi": true,
	"singleQuote": true,
	"tabWidth": 3,
	"trailingComma": "none",
	"useTabs": true,
	"overrides": [
		{
			"files": ["package.json", "package-lock.json", "*.yml", "*.md"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": "*.html",
			"options": {
				"htmlWhitespaceSensitivity": "css"
			}
		}
	]
}
